---
interface Props {
  title: string;
  url: string;
}

const { title, url } = Astro.props;
---

<a
  class="w-60 flex flex-row items-center mx-40 space-x-4 my-4 p-2 rounded border-2 border-amber-800 text-amber-800 hover:text-white hover:bg-amber-800 transition-all ease-in duration-75"
  href={url}
>
  <slot name="svg" />
  <div class="flex flex-col">
    <span>{title}</span>
  </div>
</a>
